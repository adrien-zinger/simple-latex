\NewDocumentCommand{\fig}{ o d<> m m }
{
    \begin{figure}[!h]
        \centering
        \IfNoValueTF{#1}
        {\includegraphics[width=\textwidth]{#3}}
        {\includegraphics[#1]{#3}}
        \caption{#4}
        \IfNoValueTF{#2}{\label{#4}}{\label{#2}}
    \end{figure}
}

\NewDocumentCommand{\tab}{ d<>{0mm} o{p{0.5\textwidth} p{0.5\textwidth}} m }
{
    \center{\begin{tabular}{#2}#3\end{tabular}}
    \vspace{#1}
}
